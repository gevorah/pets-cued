<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Edit Text -->
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">480dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.App.EditText.RoundBox">
        <item name="android:background">@drawable/shape_outlined_roundbox</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>
    <style name="Widget.App.EditText.CutBox">
        <item name="android:background">@drawable/shape_outlined_cutbox</item>
    </style>

    <!-- Button -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">480dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>

        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:enabled">true</item>
    </style>
    <style name="Widget.App.Button.BorderContained">
        <item name="android:background">@drawable/shape_contained_border</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">0dp</item>
    </style>
    <style name="Widget.App.Button.Contained">
        <item name="android:background">@drawable/shape_contained</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="Widget.App.Button.Outlined">
        <item name="android:background">@drawable/shape_outlined_roundbox</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="Widget.App.Button.Text">
        <item name="android:background">@color/white</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    
    <!-- Text View -->
    <style name="Widget.App.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Widget.App.Text.Small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">480dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">60dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.App.Text.Subtitle" >
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

</resources>