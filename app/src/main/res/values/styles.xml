<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/border_nofill</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:textColor">@color/gray_light</item>
    </style>

    <!-- Login buttons. -->
    <style name="BasicButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    <style name="BasicButton.ActionButton">
        <item name="android:background">@drawable/border_fill_green</item>
    </style>
    <style name="BasicButton.ThirdPartyButton">
        <item name="android:background">@drawable/noborder_fill</item>
    </style>
    <style name="BasicButton.EmailButton">
        <item name="android:background">@drawable/border_nofill</item>
    </style>
</resources>